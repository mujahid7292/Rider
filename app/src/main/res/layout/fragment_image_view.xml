<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.sand_corporation.www.uthaopartner.AccountsActivity.ImageViewFragment">

    <!--Preview documents-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/previewDocumentLayout"
        android:orientation="vertical"
        android:background="@drawable/ic_back_ground"
        android:visibility="visible">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/ic_bg_text_box"
            android:orientation="vertical">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scrollbars="vertical">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        xmlns:fresco="http://schemas.android.com/apk/res-auto"
                        android:layout_margin="10dp"
                        android:id="@+id/imgLayOut"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/imgScannedDocumentShownByGlide"/>

                        <!--<com.facebook.drawee.view.SimpleDraweeView-->
                        <!--android:id="@+id/imgScannedDocumentShownByFresco"-->
                        <!--android:layout_width="match_parent"-->
                        <!--android:layout_height="500dp"-->
                        <!--/>-->

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_below="@+id/imgLayOut"
                        android:weightSum="10"
                        android:layout_margin="20dp"
                        android:layout_alignParentBottom="true">

                        <Button
                            android:id="@+id/btnBack"
                            android:textColor="@android:color/white"
                            android:text="Back"
                            android:textAllCaps="false"
                            android:textSize="16sp"
                            android:layout_marginBottom="20dp"
                            android:background="@drawable/btn_background_white_transparent"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />

                        <Button
                            android:id="@+id/btnChangeDoc"
                            android:textColor="@android:color/white"
                            android:text="Change Document"
                            android:textAllCaps="false"
                            android:textSize="16sp"
                            android:enabled="false"
                            android:layout_marginBottom="20dp"
                            android:background="@drawable/btn_background_white_transparent"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />

                    </LinearLayout>
                </RelativeLayout>
            </ScrollView>

        </RelativeLayout>
    </LinearLayout>

</FrameLayout>
